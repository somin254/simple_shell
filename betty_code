#include <stdio.h>
#include <stdlib.h>
#include <string.h>
/**
 * main - this is the prototype
 * Return: 0
 */
int main()
{
char *li = NULL;
size_t len = 0;
ssize_t nread;
while (1)
{
printf("$ ");
fflush(stdout);
nread = getline(&li, &len, stdin);
if (nread == -1)
{
break;
}
if (li[nread - 1] == '\n')
{
li[nread - 1] = '\0';
}
printf("%s\n", li);
}
free(li);
return 0;
}
